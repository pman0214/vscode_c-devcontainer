{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-Wall",
        "-o",
        "${fileBasenameNoExtension}",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "コンパイル"
    },
    {
      "label": "run",
      "type": "shell",
      "command": "./${fileBasenameNoExtension}",
      "group": "test",
      "dependsOn": "build",
      "options": {
        "cwd": "${fileDirname}"
      },
      "detail": "プログラムを実行"
    }
  ]
}