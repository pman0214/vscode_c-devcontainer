{
  "name": "gcc-14",
  "image": "gcc:14",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack"
      ],
      "settings": {
        "C_Cpp.default.cStandard": "c11",
        "C_Cpp.default.cppStandard": "c++11",
        "C_Cpp.default.compilerPath": "/usr/local/bin/gcc",
        "files.associations": {
          "*.c": "c",
          "*.h": "c"
        }
      }
    }
  }
}